{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@components/*": ["components/*"],
      "@sections/*": ["sections/*"],
      "@redux-app/*": ["app/*"],
      "@utils/*": ["utils/*"],
      "@libs/*": ["libs/*"],
      "@graphql/*": ["graphql/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "libs/fonts.js"],
  "exclude": ["node_modules"]
}
